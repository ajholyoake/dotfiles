[color]
	ui = true
[user]
	name = Alexander Holyoake
	email = alex@stratagem.co
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
[push]
	default = simple
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[github]
	user = ajholyoake
[ghi]
	token = !security find-internet-password -a ajholyoake -s github.com -l 'ghi token' -w
	editor = vim
[ghi "highlight"]
	style = colorful
